<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">

    <diskStore path="java.io.tmpdir"/>
    <defaultCache
            maxElementsInMemory="10"
            eternal="false"
            timeToIdleSeconds="0"
            timeToLiveSeconds="10"
            overflowToDisk="true"
            />
    <!-- Page and Page Fragment Caches -->
    <cache name="dealSupplierCacheFilter"
           maxElementsInMemory="10"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="300"
           overflowToDisk="true"
            >
    </cache>

    <cache name="dashboardSummary"
           maxElementsInMemory="10"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="300"
           overflowToDisk="true"
    >
    </cache>

    <cache name="phoneCastConfiguration"
      maxElementsInMemory="40000"
      eternal="false"
      timeToIdleSeconds="0"
      timeToLiveSeconds="86400"
      overflowToDisk="false"
    >
    </cache>

</ehcache>
