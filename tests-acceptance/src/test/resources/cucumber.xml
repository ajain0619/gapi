<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-4.1.xsd">

  <context:component-scan base-package="com.nexage.geneva.*"/>
  <context:annotation-config/>

  <bean id="dbCoreDatasource"
        class="org.apache.commons.dbcp.BasicDataSource"
        destroy-method="close"
        p:maxWait="30000"
        p:maxIdle="-1"
        p:maxActive="-1"
        p:driverClassName="${db.core.driver}"
        p:url="${db.core.url}"
        p:username="${db.core.username}"
        p:password="${db.core.password}"/>

  <bean id="dbCoreJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <constructor-arg ref="dbCoreDatasource"/>
  </bean>

  <bean id="crudDatawarehouseDatasource"
        class="org.apache.commons.dbcp.BasicDataSource"
        destroy-method="close"
        p:maxWait="30000"
        p:maxIdle="-1"
        p:maxActive="-1"
        p:driverClassName="${crud.dw.db.driver}"
        p:url="${crud.dw.db.url}"
        p:username="${crud.dw.db.username}"
        p:password="${crud.dw.db.password}"/>

  <bean id="crudDatawarehouseJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <constructor-arg ref="crudDatawarehouseDatasource"/>
  </bean>

  <context:property-placeholder
      location="classpath:properties/default.properties, classpath:properties/${environment}.properties"
      ignore-unresolvable="true"
      ignore-resource-not-found="true"/>

</beans>
