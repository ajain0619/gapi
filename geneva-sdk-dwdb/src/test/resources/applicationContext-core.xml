<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- enabling annotation driven configuration /-->
  <context:annotation-config/>

  <bean id="coreServicesJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <constructor-arg ref="coreDS"/>
  </bean>

  <bean id="coreNamedJdbcTemplate"
        class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
    <constructor-arg ref="coreDS"/>
  </bean>

  <bean id="coreJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <constructor-arg ref="coreDS"/>
  </bean>

  <bean id="propagationRequiresNew" class="java.lang.String" factory-method="valueOf">
    <constructor-arg value="3"/>
  </bean>

  <bean id="txTemplate" class="org.springframework.transaction.support.TransactionTemplate">
    <property name="PropagationBehavior" ref="propagationRequiresNew"/>
    <property name="transactionManager" ref="transactionManager"/>
  </bean>

</beans>
