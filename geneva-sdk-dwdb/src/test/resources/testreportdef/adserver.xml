<reportdefinition id="8a858a0401363683264383264ac302b6">
  <name>Ad Server</name>
  <description>Seller report pertaining to the Ad Server</description>
  <category>Seller Reports</category>
  <dateranges default="Today">
    <supported>Today</supported>
    <supported>Last Week</supported>
    <supported>This Month</supported>
    <supported>Last Month</supported>
    <supported>Custom</supported>
  </dateranges>
  <columndefinitions>
    <columndefinition id="adServed">
      <displayname>Served</displayname>
      <description>Number of requests served with an ad</description>
      <actualtype>Long</actualtype>
    </columndefinition>
    <columndefinition id="adDelivered">
      <displayname>Delivered</displayname>
      <description>Number of requests delivered with an ad</description>
      <actualtype>Long</actualtype>
    </columndefinition>
    <columndefinition id="adClicks">
      <displayname>Clicks</displayname>
      <description>Number of clicks received from the served ads</description>
      <actualtype>Long</actualtype>
    </columndefinition>
    <columndefinition id="ctr">
      <displayname>CTR</displayname>
      <description>Click Through Rate on the site</description>
      <actualtype>Double</actualtype>
      <conversiontype>Percentage</conversiontype>
    </columndefinition>
    <columndefinition id="revenue">
      <displayname>Revenue</displayname>
      <description>Total revenue generated by the site</description>
      <actualtype>Double</actualtype>
      <conversiontype>Currency</conversiontype>
      <sorting>
        <order>Descending</order>
      </sorting>
    </columndefinition>
    <columndefinition id="cpm">
      <displayname>eCPM</displayname>
      <description>Effective Cost per 1000 on the site</description>
      <actualtype>Double</actualtype>
      <conversiontype>SmallCurrency</conversiontype>
    </columndefinition>
  </columndefinitions>
  <drilldowns>
    <drilldown id="site">
      <displayname>Site</displayname>
      <description>Site Name</description>
      <actualtype>String</actualtype>
      <mappinginfo>
        <id>siteId</id>
        <type>Long</type>
      </mappinginfo>
    </drilldown>
    <drilldown id="position">
      <displayname>Position</displayname>
      <description>Site position</description>
      <actualtype>String</actualtype>
      <sorting>
        <order>Ascending</order>
      </sorting>
    </drilldown>
    <drilldown id="adTag">
      <displayname>Ad Tag</displayname>
      <description>Ad Tag name</description>
      <actualtype>String</actualtype>
      <sorting>
        <order>Ascending</order>
      </sorting>
      <mappinginfo>
        <id>adTagId</id>
        <type>Long</type>
      </mappinginfo>
    </drilldown>
    <drilldown id="advertiser">
      <displayname>Advertiser</displayname>
      <description>Advertiser Name</description>
      <actualtype>String</actualtype>
      <mappinginfo>
        <id>advertiserId</id>
        <type>Long</type>
      </mappinginfo>
    </drilldown>
    <drilldown id="campaignType">
      <displayname>Campaign Type</displayname>
      <description>Campaign type</description>
      <actualtype>String</actualtype>
      <sorting>
        <order>Ascending</order>
      </sorting>
    </drilldown>
    <drilldown id="campaign">
      <displayname>Campaign</displayname>
      <description>Campaign Name</description>
      <actualtype>String</actualtype>
      <mappinginfo>
        <id>campaignId</id>
        <type>Long</type>
      </mappinginfo>
    </drilldown>
    <drilldown id="creative">
      <displayname>Creative</displayname>
      <description>Creative Name</description>
      <actualtype>String</actualtype>
      <mappinginfo>
        <id>creativeId</id>
        <type>Long</type>
      </mappinginfo>
    </drilldown>
    <drilldown id="interval">
      <displayname>Time</displayname>
      <description>Interval over which the data is aggregated</description>
      <actualtype>String</actualtype>
      <conversiontype>Date</conversiontype>
      <sorting>
        <order>Ascending</order>
      </sorting>
      <enumvalues>
        <value>Hourly</value>
        <value>Daily</value>
        <value>Weekly</value>
        <value>Monthly</value>
      </enumvalues>
    </drilldown>
  </drilldowns>
</reportdefinition>
